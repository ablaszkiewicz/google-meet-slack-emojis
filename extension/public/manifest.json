{
  "manifest_version": 3,

  "name": "Google Meet Slack Emojis",
  "description": "React with Slack emojis during Google Meet calls",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "identity", "tabs"],

  "host_permissions": ["<all_urls>", "https://slack.com/*"]
}
